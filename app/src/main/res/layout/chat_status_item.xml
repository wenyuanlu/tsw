<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_14"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_chat_status_error"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@mipmap/chat_icon_error"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/iv_chat_status_unread"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_6"
            android:layout_height="@dimen/dp_6"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/shape_chat_status_unread" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/iv_chat_status_loding"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_alignParentBottom="true"
        android:indeterminateDrawable="@drawable/shape_chat_loding"
        android:visibility="gone" />
</RelativeLayout>