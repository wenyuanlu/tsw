<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/message_item"
        android:layout_width="@dimen/dp_44"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/message_item_head"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/message_item_count"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_message_count_item"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@+id/message_item_count_image"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:src="@mipmap/message_icon_dian" />

    </RelativeLayout>

    <TextView
        android:id="@+id/message_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_item"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>





