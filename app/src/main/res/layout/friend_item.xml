<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:layout_marginLeft="@dimen/dp_9"
    android:layout_marginRight="@dimen/dp_9">
    <!--android:background="@drawable/shape_friend_item"-->

    <com.maishuo.tingshuohenhaowan.widget.CircleImageView
        android:id="@+id/iv_friend_result_head"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_11"
        android:scaleType="centerCrop"
        app:es_shape_type="round" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_weight="1"
        android:orientation="vertical">

        <!--名字-->
        <TextView
            android:id="@+id/iv_friend_result_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/FFD6D6DD"
            android:textSize="@dimen/sp_14" />

        <!--粉丝关注数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_friend_result_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="作品：0"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/iv_friend_result_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center"
                android:text="粉丝：0"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_11">

        <TextView
            android:id="@+id/tv_friend_care"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:background="@drawable/select_friend_care_item"
            android:paddingTop="@dimen/dp_5"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:text="关注"
            android:textColor="@drawable/select_friend_care_text_item"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_friend_hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_11"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/friend_list_icon_hi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_6"
            android:gravity="center"
            android:text="hi"
            android:textColor="@color/FFD674A7"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

</LinearLayout>