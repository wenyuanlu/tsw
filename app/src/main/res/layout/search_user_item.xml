<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_42">

    <com.maishuo.tingshuohenhaowan.widget.CircleImageView
        android:id="@+id/iv_search_result_user_head"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:scaleType="centerCrop"
        app:es_shape_type="round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@+id/iv_search_result_user_head"
        android:orientation="vertical">

        <!--名字-->
        <TextView
            android:id="@+id/iv_search_result_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我的名字"
            android:textColor="@color/FFD6D6DD"
            android:textSize="@dimen/sp_14" />

        <!--粉丝关注数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_search_result_user_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="粉丝 0"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/iv_search_result_user_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:text="关注 0"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>