<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_horizontal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/FFBFBFC6"
        android:textSize="@dimen/sp_14" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_horizontal_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/FFD6D6DD"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/iv_horizontal_arrow"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:src="@mipmap/icon_arrow_gray"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_horizontal_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="中间提示内容"
        android:textColor="@color/FFD6D6DD"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

</RelativeLayout>