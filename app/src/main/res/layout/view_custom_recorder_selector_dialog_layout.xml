<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="@drawable/drawable_e6151418_r20_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lin_popup_recorder_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/home_upload_icon_recording"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="录制"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/lin_popup_file_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/home_upload_icon_phone"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="手机上传"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />


        <TextView
            android:id="@+id/lin_popup_pc_up"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/home_upload_icon_pc"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="PC上传"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
</layout>