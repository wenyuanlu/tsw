<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/dp_15">

    <ImageView
        android:id="@+id/iv_tag_bg"
        android:layout_width="60dp"
        android:layout_height="@dimen/dp_26"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@mipmap/classification_bounced_button_choose" />

    <ImageView
        android:id="@+id/iv_tag_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_tag_bg"
        android:layout_alignBottom="@id/iv_tag_bg"
        android:layout_marginRight="-10dp"
        android:scaleType="fitXY"
        android:src="@drawable/phonic_categary_icon_note"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_tag_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>