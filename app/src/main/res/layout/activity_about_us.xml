<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivAboutIcon"
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_136"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_72"
        android:background="@mipmap/about_pic_logo" />

    <TextView
        android:id="@+id/tv_about_us_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:gravity="center"
        android:textColor="@color/FFD6D6DD"
        android:textSize="@dimen/sp_12"
        tools:text="当前版本V1.0.0" />

    <TextView
        android:id="@+id/tv_about_us_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="《听说用户使用服务协议》"
        android:textColor="@color/FF5064FF"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_about_us_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:gravity="center"
        android:text="《隐私协议》"
        android:textColor="@color/FF5064FF"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_36">

        <View
            android:id="@+id/viewLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="上海迈朔信息科技有限公司 版权所有"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="客服群：685391886"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/about_we_complaint_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:textColor="@color/FF84848F"
                android:textSize="@dimen/sp_12"
                tools:text="投诉电话:19121638013" />
        </LinearLayout>

        <View
            android:id="@+id/viewRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
