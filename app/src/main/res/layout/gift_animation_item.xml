<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prl_gift_animation_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_64"
    android:paddingTop="@dimen/dp_10">

    <!--有背景的横条目-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_46"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/shape_gift_bg"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_14"
            android:text="不要复制我的人生"
            android:textColor="#FF42A1"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_110"
            android:text="送出"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <!--礼物和动画相关-->
    <ImageView
        android:id="@+id/iv_gift_img"
        android:layout_width="@dimen/dp_54"
        android:layout_height="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_178"
        android:src="@mipmap/live_gift_icon_heart" />

    <!--数字的展示-->
    <com.maishuo.tingshuohenhaowan.gift.GiftNumberView
        android:id="@+id/ll_gift_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_gift_img"
        android:gravity="center"
        android:orientation="horizontal">

    </com.maishuo.tingshuohenhaowan.gift.GiftNumberView>


</RelativeLayout>