<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_vip_select"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/select_vip_item"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/iv_vip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="一个月"
            android:textColor="@color/textColor"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="¥"
                android:textColor="@color/FFC48E2C"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/iv_vip_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:text="20"
                android:textColor="@color/FFC48E2C"
                android:textSize="@dimen/sp_24" />

        </LinearLayout>

        <TextView
            android:id="@+id/iv_vip_money_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="¥25"
            android:textColor="@color/FFBBBBBB"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <!--首次开通-->
    <ImageView
        android:id="@+id/iv_vip_first"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_18"
        android:scaleType="fitCenter"
        android:src="@mipmap/label_open" />

</RelativeLayout>