<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.5dp">

    <com.maishuo.tingshuohenhaowan.widget.CircleImageView
        android:id="@+id/iv_personal_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:scaleType="centerCrop"
        app:ease_radius="12dp"
        app:es_shape_type="rectangle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:background="@drawable/shape_work_gradient_item" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_personal_icon"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_12"
        android:background="@drawable/shape_work"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_6"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_2">

        <ImageView
            android:id="@+id/iv_personal_type"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/me_works_icon_play" />

        <TextView
            android:id="@+id/tv_personal_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>
</RelativeLayout>